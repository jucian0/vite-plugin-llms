{
    "name": "vite-plugin-llms",
    "version": "1.0.1",
    "description": "Vite plugin for llms.txt specification support",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
      "dist"
    ],
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "scripts": {
      "dev": "tsup --watch",
      "build": "tsup",
      "prepublishOnly": "npm run build"
    },
    "keywords": [
      "vite-plugin",
      "llms",
      "markdown"
    ],
    "author": "Sascha Seniuk",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saschaseniuk/vite-plugin-llms.git"
    },
    "bugs": {
        "url": "https://github.com/saschaseniuk/vite-plugin-llms/issues"
    },
    "homepage": "https://github.com/saschaseniuk/vite-plugin-llms#readme",
    "peerDependencies": {
      "vite": "^5.0.0 || ^6.0.0"
    },
    "devDependencies": {
      "@types/node": "^20.0.0",
      "tsup": "^8.0.0",
      "typescript": "^5.0.0",
      "vite": "^5.0.0"
    }
  }